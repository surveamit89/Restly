<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/semitransparent">
    <LinearLayout
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:paddingStart="20.7dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_white_box">
        <TextView
            android:layout_gravity="start"
            android:gravity="center"
            android:text="Success!"
            android:textAlignment="center"
            android:textColor="@color/black_color"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="32.7dp"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="43.3sp"
            android:id="@+id/textTitle"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:text="Your Request has been Submitted Successfully !"
            android:textAlignment="textStart"
            android:textColor="@color/text_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="16dp"
            android:id="@+id/textMessage"/>
        <TextView
            android:layout_marginHorizontal="40dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:text="OK"
            android:textAlignment="center"
            android:textColor="@color/app_color"
            android:layout_width="92dp"
            android:layout_height="50dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="22.7dp"
            android:id="@+id/textDone" 
            android:layout_margin="16dp"/>
    </LinearLayout>
</RelativeLayout>
