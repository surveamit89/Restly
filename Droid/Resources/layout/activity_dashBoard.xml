<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="85dp"
            android:paddingHorizontal="15dp"
         android:background="@color/black_color"
        android:layout_alignParentTop="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingVertical="5dp"
                android:weightSum="11">
                <TextView
                    android:layout_weight="5"
                    android:paddingTop="3dp"
                  android:text="Food and Drinks"
                  android:textSize="18dp"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:textColor="@color/white_color"
                  android:fontFamily="@font/montserrat_bold"
                app:MvxBind="Text MenuTitle"/>
                 <LinearLayout 
                 android:layout_weight="6"
                 android:layout_width="0dp"
                 android:gravity="end"
                 android:orientation="horizontal"
                  android:layout_height="wrap_content"
                  app:MvxBind="Visibility LocationVisibility, Converter=Visibility">
                  <FFImageLoading.Cross.MvxCachedImageView
                android:paddingVertical="2dp"
                android:paddingStart="20dp"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:id="@+id/itemimage"
                android:src="@drawable/ic_location"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:tint="@color/white_color"/>
                  <TextView
                    android:text="Restaurant"
                    android:singleLine="true"
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:drawableTint="@color/white_color"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_color"
                    android:fontFamily="@font/montserrat_regular"
                    app:MvxBind="Text SelectedRestaurant.Title"/>
                 </LinearLayout>
                <RelativeLayout
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_height="match_parent">
                    <ImageView
            android:text="Restaurant"
            android:src="@drawable/ic_location"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:drawableTint="@color/white_color"
            android:layout_height="wrap_content"
            android:textColor="@color/white_color"
            android:fontFamily="@font/montserrat_regular"/>
                    <TextView
                        android:layout_alignParentEnd="true"
            android:text="Restaurant"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:drawableTint="@color/white_color"
            android:layout_height="wrap_content"
            android:textColor="@color/white_color"
            android:fontFamily="@font/montserrat_regular"
            app:MvxBind="Text SelectedRestaurant.Title"/>
                </RelativeLayout>
                
            </LinearLayout>
             
            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <EditText
                    android:layout_weight="8"
            android:id="@+id/editTextInput"
                android:singleLine="true"
                android:maxLength="50"
                android:paddingStart="20dp"
                android:inputType="textNoSuggestions"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/abc_ic_search_api_material"
                android:background="@drawable/rounded_corner_white_box"
                    android:drawableTint="@color/gray_color"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:hint="Restaurant or product"
                android:lineSpacingExtra="0sp"
                android:textSize="12dp"
                android:textColorHint="@color/gray_text_color"
                android:textColor="@color/gray_text_color"
                android:fontFamily="@font/montserrat_regular"
                app:MvxBind="Text SearchItem"/>
                 <TextView
                    android:layout_weight="2"
            android:text="Clear"
            android:textSize="12dp"
                    android:paddingStart="15dp"
             android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/app_color"
            android:fontFamily="@font/montserrat_semibold"
            app:MvxBind="Click ClearSearchCommand"/>
             </LinearLayout>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                 <MvvmCross.DroidX.RecyclerView.MvxRecyclerView
	        android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:id="@+id/CategoriesItems"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:orientation="horizontal"
	        app:MvxItemTemplate="@layout/category_single_item"
	        app:MvxBind="ItemsSource CategoryList;ItemClick SelectCategoryCommand;BackgroundColor StringToColor(SelectedBackgroundColor)"/>
        <RelativeLayout
            android:paddingHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp">
            <TextView
            android:text="Sorry, No Data Found."
            android:textSize="18dp"
             android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/app_black_color"
            android:fontFamily="@font/montserrat_regular"
            app:MvxBind="Text NoDataLabel"/>
            <MvvmCross.DroidX.RecyclerView.MvxRecyclerView
           android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        app:MvxItemTemplate="@layout/restaurant_single_item"
	        app:MvxBind="ItemsSource RestaurantsList;ItemClick SelectRestaurantCommand;Visibility ShowRestaurant, Converter=Visibility;BackgroundColor StringToColor(SelectedBackgroundColor)"/>
            <MvvmCross.DroidX.RecyclerView.MvxRecyclerView
             android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        app:MvxItemTemplate="@layout/menu_single_item"
	        app:MvxBind="ItemsSource MenuList;ItemClick SelectMenuCommand;Visibility LocationVisibility, Converter=Visibility"/>
            
         </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_color"
                app:MvxBind="Visibility SearchVisibility, Converter=Visibility">
               <TextView
            android:text="Sorry, this task is pending."
            android:textSize="18dp"
             android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/app_black_color"
            android:fontFamily="@font/montserrat_regular"/>
             </RelativeLayout>
            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/ic_hand_round"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:MvxBind="Visibility LocationVisibility, Converter=Visibility;Click RaisedHandCommand">
              <ffimageloading.cross.MvxCachedImageView
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_hand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
        android:tint="@color/white_color"/>
             </RelativeLayout>
         </RelativeLayout>
       
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/shadow_effect"/>
        <LinearLayout
            android:paddingTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/white_color"
        android:weightSum="8">
         <LinearLayout 
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_marginEnd="10dp"
            android:layout_height="40dp"
            app:MvxBind="Click MenuCommand">
    <FFImageLoading.Cross.MvxCachedImageView
                android:src="@drawable/ic_menu"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:tint="@color/app_color"/>
    <TextView
            android:text="Menu"
        android:layout_marginHorizontal="3dp"
           android:singleLine="true"
            android:textSize="10dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/app_color"
            android:fontFamily="@font/montserrat_regular"
            />
</LinearLayout>
         <LinearLayout 
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_marginEnd="10dp"
            android:layout_height="40dp"
    app:MvxBind="Click OrderCommand">
    <FFImageLoading.Cross.MvxCachedImageView
                android:src="@drawable/ic_order"
                android:layout_width="match_parent"
                android:layout_height="20dp"
            android:tint="@color/gray_text_color"/>
    <TextView
            android:text="Order"
        android:layout_marginHorizontal="3dp"
           android:singleLine="true"
            android:textSize="10dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             android:textColor="@color/text_color"
            android:fontFamily="@font/montserrat_regular"/>
</LinearLayout>
         <LinearLayout 
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_marginEnd="10dp"
            android:layout_height="40dp"
    app:MvxBind="Click TabCommand">
    <FFImageLoading.Cross.MvxCachedImageView
                android:src="@drawable/ic_tab"
                 android:layout_width="match_parent"
                android:layout_height="20dp"
                android:tint="@color/gray_text_color"/>
    <TextView
            android:text="Tab"
        android:layout_marginHorizontal="3dp"
           android:singleLine="true"
            android:textSize="10dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             android:textColor="@color/text_color"
            android:fontFamily="@font/montserrat_regular"/>
</LinearLayout>
         <LinearLayout 
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_marginEnd="10dp"
            android:layout_height="40dp"
    app:MvxBind="Click AccountCommand">
    <FFImageLoading.Cross.MvxCachedImageView
                android:src="@drawable/ic_setting"
                 android:layout_width="match_parent"
                android:layout_height="20dp"
                android:tint="@color/gray_text_color"/>
    <TextView
            android:text="Account"
        android:layout_marginHorizontal="3dp"
           android:singleLine="true"
            android:textSize="10dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             android:textColor="@color/text_color"
            android:fontFamily="@font/montserrat_regular"/>
</LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
