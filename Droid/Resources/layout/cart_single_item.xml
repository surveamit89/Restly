<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:weightSum="10"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/rounded_corner_white_box">
     <FFImageLoading.Cross.MvxCachedImageView
        android:layout_weight="3"
                android:id="@+id/itemimage"
                android:src="@drawable/icon_bw"
                 android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:MvxBind="ImagePath ImageUrl"/>
    <LinearLayout
         android:layout_weight="7"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">
 <LinearLayout
        android:paddingHorizontal="7dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
         <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8">
             <TextView
            android:text="ITEM LOCATOR"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black_color"
            android:fontFamily="@font/montserrat_bold"
            app:MvxBind="Text Name"/>
         </LinearLayout>
         <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
           android:gravity="end"     
        android:layout_height="30dp"
        android:layout_weight="2">
             <TextView
                android:text="$"
                 android:layout_marginEnd="5dp"
                android:textSize="16dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
               android:fontFamily="@font/montserrat_bold"/>

             <TextView
            android:text="4.5 "
            android:textSize="16dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:fontFamily="@font/montserrat_bold"
            app:MvxBind="Text Price"/>
           
         </LinearLayout>
    </LinearLayout>
    <HorizontalScrollView
        android:paddingHorizontal="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <TextView
            android:text="ITEM LOCATOR"
            android:singleLine="true"
            android:textSize="12dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/gray_color"
            android:fontFamily="@font/montserrat_semibold"
            app:MvxBind="Text Description"
            android:scrollbars="horizontal"/>
     </HorizontalScrollView>
    <LinearLayout
        android:paddingHorizontal="7dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <MvvmCross.DroidX.RecyclerView.MvxRecyclerView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:orientation="horizontal"
	        app:MvxItemTemplate="@layout/tag_single_item"
	        app:MvxBind="ItemsSource TagList;"/>
         </RelativeLayout>
    </LinearLayout>
       <LinearLayout
        android:paddingHorizontal="7dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
             <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
           android:gravity="start"     
        android:layout_height="30dp"
        android:layout_weight="5">
             <TextView
                android:text="Quantity: "
                 android:layout_marginEnd="5dp"
                android:textSize="16dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
               android:fontFamily="@font/montserrat_regular"/>

             <TextView
            android:text="4"
            android:textSize="16dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:fontFamily="@font/montserrat_bold"
            app:MvxBind="Text CartProductCount"/>
           
         </LinearLayout>
         <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5">
             <TextView
                    android:layout_marginHorizontal="15dp"
            android:text="REMOVE"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:background="@drawable/rounded_corner_white_box"
            android:textColor="@color/white_color"
            android:backgroundTint="@android:color/holo_red_dark"
            android:fontFamily="@font/montserrat_regular"
            />
         </LinearLayout>
        
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
