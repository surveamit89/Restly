<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="80dp"
     android:layout_marginEnd="10dp"
    android:layout_height="120dp"
    android:background="@drawable/rounded_corner_white_box">
    <FFImageLoading.Cross.MvxCachedImageView
                android:scaleType="fitXY"
                android:id="@+id/itemimage"
                android:src="@drawable/icon_bw"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:MvxBind="ImagePath ImageUrl"/>
    <TextView
            android:text="ITEM LOCATOR "
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="3dp"
           android:maxLines="2"
            android:textSize="12dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/black_color"
            android:fontFamily="@font/montserrat_regular"
        app:MvxBind="Text Name"/>
            <!--app:MvxBind="Text Title;TextColor SelectedTextColor,Converter=StringToColor"/>-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
           android:gravity="center"     
        android:layout_height="wrap_content">
             <TextView
                android:text="$"
                 android:layout_marginEnd="5dp"
                android:textSize="12dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
               android:fontFamily="@font/montserrat_bold"/>

             <TextView
            android:text="4.5 "
            android:textSize="12dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:fontFamily="@font/montserrat_bold"
            app:MvxBind="Text Price"/>
           
         </LinearLayout>
</LinearLayout>
