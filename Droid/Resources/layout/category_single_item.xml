<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="80dp"
    android:layout_marginHorizontal="5dp"
    android:layout_height="80dp"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="6dp"
    android:layout_marginBottom="5dp">
     <LinearLayout 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">
   <!-- app:MvxBind="BackgroundColor SelectedBackgroundColor, Converter=StringToColorValue">-->

    <FFImageLoading.Cross.MvxCachedImageView
                android:scaleType="fitXY"
                android:id="@+id/itemimage"
                android:src="@drawable/icon_bw"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:MvxBind="ImagePath ImageUrl"/>
    <TextView
            android:text="ITEM \nLOCATOR "
        android:layout_marginVertical="1dp"
        android:layout_marginHorizontal="3dp"
           android:maxLines="2"
            android:textSize="9dp"
            android:gravity="center"
        android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black_color"
            android:fontFamily="@font/montserrat_semibold"
            app:MvxBind="Text Title;"/>
           <!--app:MvxBind="Text Title;TextColor SelectedTextColor, Converter=StringToColor;BackgroundColor SelectedBackgroundColor, Converter=StringToColor"-->
</LinearLayout>
</android.support.v7.widget.CardView>
  